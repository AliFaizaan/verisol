<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <HighEntropyVA>true</HighEntropyVA> 
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging" Version="2.1.1" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="2.1.1" />
    <ProjectReference Include="..\SolidityAST\SolidityAST.csproj" />
    <ProjectReference Include="..\BoogieAST\BoogieAST.csproj" />
    <ProjectReference Include="..\SolToBoogie\SolToBoogie.csproj" />
    <ProjectReference Include="..\..\corral\cba-NetCore.csproj" />
    <ProjectReference Include="..\..\corral\boogie\Source\BoogieDriver\BoogieDriver-NetCore.csproj" />
  </ItemGroup>

   <ItemGroup>
        <SolcFiles Include="..\..\Tool\**\*.*"/>
        <CorralFiles Include="..\..\corral\bin\debug\netcoreapp2.2\corral.runtimeconfig.json"/>
        <ConcExplorerFiles Include="..\..\corral\tools\**\*.*"/>
        <BoogieFiles Include="..\..\corral\boogie\Source\BoogieDriver\bin\debug\netcoreapp2.2\BoogieDriver.*"/>
        <Z3Files Include="..\..\Tool\z3.exe"/>
   </ItemGroup> 

  <Target Name="CopySolFiles" AfterTargets="AfterBuild">
        <Copy
            SourceFiles="@(SolcFiles)"
            DestinationFolder="$(OutDir)\solc\"
        />
    </Target>
  <Target Name="CopyConcExplorerFiles" AfterTargets="AfterBuild">
        <Copy
            SourceFiles="@(ConcExplorerFiles)"
            DestinationFolder="$(OutDir)\concurrencyExplorer\"
        />
    </Target>
  <Target Name="CopyZ3" AfterTargets="AfterBuild">
        <Copy
            SourceFiles="@(Z3Files)"
            DestinationFolder="$(OutDir)\"
        />
    </Target>
  <Target Name="CopyCorralConfig" AfterTargets="AfterBuild">
        <Copy
            SourceFiles="@(CorralFiles)"
            DestinationFolder="$(OutDir)\"
        />
    </Target>
  <Target Name="CopyBoogieConfig" AfterTargets="AfterBuild">
        <Copy
            SourceFiles="@(BoogieFiles)"
            DestinationFolder="$(OutDir)\"
        />
    </Target>
</Project>
